{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the virtual network"
            }
        },
        "vnetAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "CIDR range for the virtual network"
            }
        },
        "subnetCount": {
            "type": "int",
            "metadata": {
                "description": "Number of subnets to be created"
            }
        }
    },
    "variables": {
        "subnets": [],
        "subnetName": "subnet"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": "[variables('subnets')]"
            }
        }
    ],
    "outputs": {
        "subnets": {
            "type": "array",
            "value": "[variables('subnets')]"
        }
    },
    "functions": [
        {
            "namespace": "templateFunc",
            "members": {
                "createSubnet": {
                    "parameters": [
                        {
                            "name": "vnetAddressPrefix",
                            "type": "string"
                        },
                        {
                            "name": "index",
                            "type": "int"
                        }
                    ],
                    "output": {
                        "type": "object",
                        "value": {
                            "name": "[concat(variables('subnetName'), copyIndex())]",
                            "properties": {
                                "addressPrefix": "[concat(variables('vnetAddressPrefix').split('/')[0], '/', 32 - log(2,27))]"
                            }
                        }
                    }
                }
            }
        }
    ]
}
