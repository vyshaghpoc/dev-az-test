{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetCIDR": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "The CIDR for the Virtual Network"
            }
        }
    },
    "variables": {
        "subnetPrefix1": "10.0.0.0/27",
        "subnetPrefix2": "10.0.0.32/27",
        "subnetPrefix3": "10.0.0.64/27"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-07-01",
            "name": "myVnet",
            "location": "westeurope",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCIDR')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix1')]"
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix2')]"
                        }
                    },
                    {
                        "name": "subnet3",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix3')]"
                        }
                    }
                ]
            }
        }
    ]
}
