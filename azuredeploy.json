{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "defaultValue": "myVNet",
            "metadata": {
                "description": "Name of the VNet."
            }
        },
        "vnetAddressPrefix": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Address prefix for the VNet in CIDR format."
            }
        },
        "subnetCount": {
            "type": "int",
            "defaultValue": ,
            "metadata": {
                "description": "Number of subnets to create."
            }
        }
    },
    "variables": {
        "subnetPrefix": "[concat(variables('vnetAddressPrefix').split('/')[0],'/',variables('vnetAddressPrefix').split('/')[1], '/',24+log2(parameters('subnetCount')))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-06-01",
            "name": "[parameters('vnetName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[concat(variables('subnetPrefix'), '/0')]"
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[concat(variables('subnetPrefix'), '/1')]"
                        }
                    },
                    {
                        "copy": {
                            "name": "subnetLoop",
                            "count": "[parameters('subnetCount') - 2]",
                            "input": {
                                "name": "subnet[copyIndex()]",
                                "properties": {
                                    "addressPrefix": "[concat(variables('subnetPrefix'), '/', copyIndex() + 2)]"
                                }
                            }
                        }
                    }
                ]
            }
        }
    ]
}
