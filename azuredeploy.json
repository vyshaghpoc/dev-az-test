{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
      "type": "string",
      "defaultValue": "myVnet",
      "metadata": {
        "description": "Name of the virtual network"
      }
    },
        "vnetCidr": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "CIDR block for the virtual network"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "myVnet",
            "apiVersion": "2020-06-01",
            "location": "West US",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCidr')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[concat(parameters('vnetCidr'), '/27')]",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', 'myRouteTable')]"
                            }
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[concat(parameters('vnetCidr'), '/27')]",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', 'myRouteTable')]"
                            }
                        }
                    },
                    {
                        "name": "subnet3",
                        "properties": {
                            "addressPrefix": "[concat(parameters('vnetCidr'), '/27')]",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', 'myRouteTable')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "name": "myRouteTable",
            "apiVersion": "2020-06-01",
            "location": "West US",
            "properties": {
                "routes": [
                    {
                        "name": "defaultRoute",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "10.0.4.1"
                        }
                    }
                ]
            }
        }
    ]
}
